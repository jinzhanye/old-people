<!--pages/classic/classic.wxml-->
<view class="container">
  <view class="header">
    <date-cmp
      date="{{ periodical.pubDate }}"/>
    <like-cmp
      count="{{ periodical.favNums}} "
      like="{{ periodical.likeStatus }}"
      bind:like="onLike"/>
  </view>
  <view
    class="body">
    <navigator
      url="/pages/detail/detail?id=3">
      <image
        class="cover"
        src="{{ periodical.image }}"/>
    </navigator>
    <image
      class="music-text"
      src="/images/music-text.png"/>
    <text>
      {{ periodical.content }}
    </text>
  </view>
  <view
    style="margin-top: 32px"
    class="center">
    <pager-cmp
      hasPrev="{{ hasPrev }}"
      hasNext="{{ hasNext }}"
      title="{{ periodical.title }}"
      bind:prev="onPrev"
      bind:next="onNext"/>
  </view>
</view>
